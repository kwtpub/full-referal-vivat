generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Agent {
  id             String  @id @default(cuid())
  name           String
  email          String  @unique
  passwordHash   String
  isActive       Boolean @default(true)
  isAdmin        Boolean @default(false)
  activationLink String  @unique

  clients Client[]
  deals   Deal[]
  bonuses Bonus[]
  tokens  Token[] // üëà —Å–≤—è–∑—å "–æ–¥–∏–Ω –∫–æ –º–Ω–æ–≥–∏–º" —Å —Ç–∞–±–ª–∏—Ü–µ–π —Ç–æ–∫–µ–Ω–æ–≤

  createdAt DateTime @default(now())
}

model Client {
  id    String @id @default(cuid())
  name  String
  phone String @unique

  agent   Agent  @relation(fields: [agentId], references: [id])
  agentId String

  createdAt DateTime @default(now())

  // –û–¥–∏–Ω –∫–ª–∏–µ–Ω—Ç -> –º–Ω–æ–≥–æ –∑–∞–∫–∞–∑–æ–≤
  deals Deal[]
}

model Deal {
  id String @id @default(cuid())

  client   Client @relation(fields: [clientId], references: [id])
  clientId String

  agent   Agent  @relation(fields: [agentId], references: [id])
  agentId String

  // –ò–Ω—Ç–µ—Ä–µ—Å –ª–æ–¥–∫–∏
  interestBoat InterestBoat
  quantity     Int

  // –í–æ—Ä–æ–Ω–∫–∞ –∏ —Å—Ç–∞—Ç—É—Å
  stage  String
  status String

  // –û–∂–∏–¥–∞–µ—Ç –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –∞–¥–º–∏–Ω–∞
  pendingApproval Boolean @default(false)

  // –î–µ–Ω—å–≥–∏
  amount   Decimal?
  closedAt DateTime?

  createdAt DateTime @default(now())

  bonus Bonus? // –û–¥–∏–Ω –±–æ–Ω—É—Å –Ω–∞ —Å–¥–µ–ª–∫—É
}

model Bonus {
  id        String   @id @default(cuid())
  dealId    String   @unique // –û–¥–∏–Ω –±–æ–Ω—É—Å –Ω–∞ –æ–¥–Ω—É —Å–¥–µ–ª–∫—É
  agentId   String
  percent   Decimal  // –ü—Ä–æ—Ü–µ–Ω—Ç –∫–æ–º–∏—Å—Å–∏–∏ (3, 5 –∏–ª–∏ 8)
  amount    Decimal  // –°—É–º–º–∞ –±–æ–Ω—É—Å–∞ –≤ —Ä—É–±–ª—è—Ö
  createdAt DateTime @default(now())

  deal  Deal  @relation(fields: [dealId], references: [id], onDelete: Cascade)
  agent Agent @relation(fields: [agentId], references: [id])
}

model Token {
  id           String   @id @default(cuid())
  refreshToken String   @unique @db.VarChar(512)
  userAgent    String? // –Ω–∞–ø—Ä–∏–º–µ—Ä, –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è info –æ –±—Ä–∞—É–∑–µ—Ä–µ / —É—Å—Ç—Ä–æ–π—Å—Ç–≤–µ
  expiresAt    DateTime // –¥–∞—Ç–∞ –∏—Å—Ç–µ—á–µ–Ω–∏—è refresh —Ç–æ–∫–µ–Ω–∞
  createdAt    DateTime @default(now())

  agent   Agent  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  agentId String
}

enum InterestBoat {
  HardTop
  ClassicBoat
  Bowrider
}
