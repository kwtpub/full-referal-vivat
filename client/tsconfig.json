{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",
    "resolveJsonModule": true
  },

  "exclude": ["node_modules", "dist", "vite.config.ts", "eslint.config.js"]

}
